<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comentarios"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C6E12E"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10sp"
            android:layout_weight="4"
            android:src="@mipmap/coments03_1" />

        <EditText
            android:id="@+id/mt_comentario_coments_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="2"
            android:ems="10"
            android:hint="comentario"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/btn_enviar_mensaje_comentario"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="4"
            android:background="#C6E12E"
            android:src="@mipmap/enviar03"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_titulo_comentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_v_comentario_p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:background="#4FADDC68">

    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>