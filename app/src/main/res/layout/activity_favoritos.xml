<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favoritos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#cce845"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_home2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circulo_blaco"
            android:elevation="40dp"
            android:src="@mipmap/home03" />

        <ImageButton
            android:id="@+id/btn_fav2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circuloverde"
            android:elevation="40dp"
            android:src="@mipmap/fav03" />

        <ImageButton
            android:id="@+id/btn_perfil2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circulo_blaco"
            android:elevation="40dp"
            android:src="@mipmap/perfill03" />

        <ImageButton
            android:id="@+id/btn_conf2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circulo_blaco"
            android:elevation="40dp"
            android:src="@mipmap/config03" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerfav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:background="#ffff79"
        tools:targetApi="lollipop" />


</RelativeLayout>