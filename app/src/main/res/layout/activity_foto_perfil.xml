<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0sp"
    android:layout_marginRight="0sp"
    android:background="#4FADDC68"
    android:orientation="vertical"
    tools:context=".FotoPerfil">

    <ImageView
        android:id="@+id/upload_image_foto_perfil"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginTop="20sp"
        android:src="@mipmap/foto_perfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_elegir_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="elegit Imagen" />

        <Button
            android:id="@+id/btn_enviar_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="enviar" />

    </LinearLayout>


</LinearLayout>