<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".RecuperarContr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#80000000"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="166dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@mipmap/logo_001"
            android:layout_marginTop="10sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar ContraseÃ±a"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:id="@+id/et_gmail_recuperar_contra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bordes_redondos_edti"
            android:drawableLeft="@mipmap/ic_launcher_correo"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="@string/txt_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            />

        <Button
            android:id="@+id/btn_enviar_recuperar_contra"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="sans-serif-medium"
            android:text="Recuperar"
            android:textColor="#252424"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_atras_recuperar_c"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="sans-serif-medium"
            android:text="@string/btn_atras"
            android:textColor="#252424"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>