<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/logo"
            app:layout_constraintBottom_toTopOf="@+id/et_user_registro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/logo_001"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et_user_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bordes_redondos_edti"
            android:drawableLeft="@mipmap/ic_launcher_user"
            android:ems="10"
            android:hint="@string/userName"
            android:importantForAutofill="no"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:drawableStart="@mipmap/ic_launcher_user" />

        <EditText
            android:id="@+id/et_gmail_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bordes_redondos_edti"
            android:drawableLeft="@mipmap/ic_launcher_correo"
            android:ems="10"
            android:hint="@string/txt_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:drawableStart="@mipmap/ic_launcher_correo" />

        <EditText
            android:id="@+id/et_telefono_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bordes_redondos_edti"
            android:drawableLeft="@mipmap/ic_launcher_telefono"
            android:ems="10"
            android:hint="@string/txt_numero"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:drawableStart="@mipmap/ic_launcher_telefono" />

        <EditText
            android:id="@+id/et_contraseÃ±a_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bordes_redondos_edti"
            android:drawableLeft="@mipmap/ic_launcher_clave"
            android:ems="10"
            android:hint="@string/txt_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:drawableStart="@mipmap/ic_launcher_clave" />

        <EditText
            android:id="@+id/et_r_password_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bordes_redondos_edti"
            android:drawableLeft="@mipmap/ic_launcher_clave"
            android:ems="10"
            android:hint="@string/txt_repetir_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:drawableStart="@mipmap/ic_launcher_clave" />

        <Button
            android:id="@+id/btn_registrarse_registro"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="monospace"
            android:text="@string/btn_reg"
            android:textColor="#100F0F"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/btn_atras"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="monospace"
            android:text="@string/btn_atras"
            android:textColor="#0B0A0A"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:targetApi="lollipop" />

    </LinearLayout>



</RelativeLayout>