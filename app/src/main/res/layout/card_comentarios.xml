<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#D1D6D8"
    android:id="@+id/cv_comentarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:id="@+id/iv_perfil_comentarios"
            android:src="@mipmap/foto_perfil"
            android:layout_weight="3"
            android:layout_margin="10sp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            >

            <TextView
                android:id="@+id/tv_nombre_comentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nombre_app"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comentario_comentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/activo"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:textSize="19sp"
            />
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>