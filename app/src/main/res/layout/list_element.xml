<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp">

        <RelativeLayout
            android:id="@+id/rl_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="6dp">

            <LinearLayout
                android:id="@+id/linear_l_contendor_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/iv_image_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="30sp"
                    android:contentDescription="@string/img_btn"
                    android:src="@mipmap/lugar1"
                    tools:targetApi="lollipop" />


                <TextView
                    android:id="@+id/status_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="@string/items"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp" />

                <TextView
                    android:id="@+id/city_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:layout_marginLeft="45sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="casual"
                    android:gravity="end"
                    android:text="@string/colombia"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:layout_marginEnd="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageButton
                            android:id="@+id/btn_home_like"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:backgroundTint="@color/purple_700"
                            android:contentDescription="@string/img_btn"
                            android:src="@mipmap/like02"
                            tools:targetApi="lollipop"
                            />

                        <ImageButton
                            android:id="@+id/btn_home_like2"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:backgroundTint="#375A01"
                            android:contentDescription="@string/img_btn"
                            android:src="@mipmap/like02"
                            tools:targetApi="lollipop"
                            />
                    </LinearLayout>



                    <ImageButton
                        android:id="@+id/btn_home_comment"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/purple_700"
                        android:contentDescription="@string/img_btn"
                        android:src="@mipmap/coment03"
                        tools:targetApi="lollipop" />

                    <ImageButton
                        android:id="@+id/btn_home_agregar"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/purple_700"
                        android:contentDescription="@string/img_btn"
                        android:src="@mipmap/agregar03"
                        tools:targetApi="lollipop" />

                </LinearLayout>
            </LinearLayout>




        </RelativeLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>